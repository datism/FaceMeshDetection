<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewFaceActivity">

    <com.pmntm.nhom4.facemeshdetection.CameraSourcePreview
        android:id="@+id/preview_view2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp" >

    </com.pmntm.nhom4.facemeshdetection.CameraSourcePreview>

    <com.pmntm.nhom4.facemeshdetection.GraphicOverlay
        android:id="@+id/graphic_overlay2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@id/preview_view2"
        app:layout_constraintRight_toRightOf="@id/preview_view2"
        app:layout_constraintTop_toTopOf="@id/preview_view2"
        app:layout_constraintBottom_toBottomOf="@id/preview_view2"/>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        android:text="@string/back"
        app:layout_constraintStart_toStartOf="@+id/preview_view2"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="20dp"
        android:hint="@string/type_name"
        android:minHeight="48dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/preview_view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="VisualLintTextFieldSize" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/ok"
        app:layout_constraintBottom_toBottomOf="@+id/preview_view2"
        app:layout_constraintEnd_toEndOf="@+id/preview_view2" />

</androidx.constraintlayout.widget.ConstraintLayout>